<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_daytime_material_blue"
    android:fitsSystemWindows="true">

    <com.agenthun.readingroutine.views.SixangleViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_horizontal">

        <ImageButton
            android:id="@+id/ic_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_fab_default"
            android:elevation="@dimen/default_elevation"
            android:scaleType="fitCenter"
            android:src="@drawable/reading_badge" />

        <ImageButton
            android:id="@+id/ic_routines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_fab_default"
            android:elevation="@dimen/default_elevation"
            android:scaleType="fitCenter"
            android:src="@drawable/routines_badge" />

        <ImageButton
            android:id="@+id/ic_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_fab_default"
            android:elevation="@dimen/default_elevation"
            android:scaleType="fitCenter"
            android:src="@drawable/shopping_badge" />

        <ImageButton
            android:id="@+id/ic_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_fab_default"
            android:elevation="@dimen/default_elevation"
            android:scaleType="fitCenter"
            android:src="@drawable/about_badge" />

        <ImageButton
            android:id="@+id/ic_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_fab_default"
            android:elevation="@dimen/default_elevation"
            android:scaleType="fitCenter"
            android:src="@drawable/notes_badge" />

        <ImageButton
            android:id="@+id/ic_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_fab_default"
            android:elevation="@dimen/default_elevation"
            android:scaleType="fitCenter"
            android:src="@drawable/settings_badge" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_reading_routine_white" />
    </com.agenthun.readingroutine.views.SixangleViewGroup>
</android.support.design.widget.CoordinatorLayout>
